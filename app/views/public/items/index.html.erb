<h2 class="d-inline">商品一覧</h2>(全<%= @items.count %>件)

<% @items.each do |item| %>
<div>
  <p>
    <% link_to item(item.id) do %>
      <%= attachment_image_tag(item, :item_image, :fill, 100, 100, fallback:"no_image.jpg") %>
    <% end %>
  </p>
  
  <p>商品名：<%= item.name %></p>
  <p>¥<%= item.price_without_tax %></p>
</div>
<% end %>
<%= paginate @items %>