<div class="container">
  <div class="text">
  <div class="row mt-5">
    <div class="col">
      <h2 class="d-inline my-2">商品一覧</h2>(全<%= @items_count.count %>件)
      <div class="d-flex align-content-start flex-wrap mt-4">
        <% @items.each do |item| %>
        <div class="mx-2 my-4">
          <div>
            <%= link_to item_path(item) do %>
              <%= attachment_image_tag item, :item_image, :fill, 250, 150, fallback:"no_image.jpg" %>
            <% end %>
          </div>
          <div class="my-1">商品名：<%= item.name %></div>
          <div class="my-1"><%= number_to_currency(item.price_without_tax, unit:"¥", strip_insignificant_zeros: true) %></div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>

<div class="mx-auto" style="width: 300px;">
  <%= paginate @items %>
</div>