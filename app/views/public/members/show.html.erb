<div class="container">
  <div class="text">
  <div class="row mb-5 mt-5">
    <div class="col-3">
      <h2 class="text-center" style= "background-color: #C2EEFF">マイページ</h2>
    </div>
  </div>


  <div class="mb-4">
    <div style="display: inline-block" class="mr-4"><h3>登録情報</h3></div>
    <div style="display: inline-block">
    <%= link_to "編集する", members_edit_path, class:"btn btn-success" %>
    </div>
  </div>
  <table class="table table-bordered" style="width:60%">
    <tbody>
      <tr>
        <th style="background-color: #C2EEFF">氏名</th>
        <td><%= current_member.first_name %> <%= current_member.last_name %></td>
      </tr>
      <tr>
        <th style="background-color: #C2EEFF">カナ</th>
        <td><%= current_member.kana_first_name %> <%= current_member.kana_last_name %></td>
      </tr>
      <tr>
        <th style="background-color: #C2EEFF">郵便番号</th>
        <td><%= current_member.postal_code %></td>
      </tr>
      <tr>
        <th style="background-color: #C2EEFF">住所</th>
        <td><%= current_member.street_address %></td>
      </tr>
      <tr>
        <th style="background-color: #C2EEFF">電話番号</th>
        <td><%= current_member.phone_number %></td>
      </tr>
      <tr>
        <th style="background-color: #C2EEFF">メールアドレス</th>
        <td><%= current_member.email %></td>
      </tr>
    </tbody>
  </table>
  <div class="mb-4">
    <div style="display: inline-block" class="mr-5"><h3>配送先</h3></div>
    <div style="display: inline-block">
    <%= link_to "一覧を見る", shipping_addresses_path, class:"btn btn-primary" %>
    </div>
  </div>
  <div class="mb-4">
    <div style="display: inline-block" class="mr-4"><h3>注文履歴</h3></div>
    <div style="display: inline-block">
    <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
    </div>
  </div>
  </div>
</div>
