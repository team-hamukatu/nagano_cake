<div class="container">
  <h4>注文履歴一覧</h4>

  <div class="row">
    <div class="col-12 my-5">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td style="width:15%">
                <%= order.created_at.strftime('%Y/%m/%d') %>
              </td>
              <td style="width:30%">
                <%= "〒" + order.shipping_postal_code %><br>
                <%= order.shipping_street_address %><br>
                <%= order.shipping_name %>
              </td>
              <td style="width:15%">
                <ul class="m-0 p-0">
                <% order.ordered_items.each do |ordered_item| %>
                  <li style="list-style: none;"><%= ordered_item.item.name %></li>
                <% end %>
                </ul>
              </td>
              <td style="width:10%">
                <%= number_to_currency(order.billing_amount, unit:" ", strip_insignificant_zeros: true) %>円
              </td>
              <td style="width:15%">
                <%= order.order_status %>
              </td>
              <td style="width:15%">
                <%= link_to "表示する",order_path(order), method: :get, class: "btn btn-primary" %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>