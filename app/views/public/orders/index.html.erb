<div class="container">
  <h4>注文履歴一覧</h4>
  
  <div class="row">
    <div class="col-8 my-5">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td>
                <%= order.created_at %>
              </td>
              <td>
                <%= "〒" + order.shipping_postal_code.to_s.insert(3, "-") %><br>
                <%= order.shipping_street_address %><br>
                <%= order.shipping_name %>
              </td>
              <td>
                <%= order.member.cart_items.name %>
              </td>
              <td>
                <%= order.member.cart_items.name %> %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>