<div class="container">
  <div class="text">
  <div class="row mt-5">
    <div class="col-2 ml-3">
      <h2 class="text-center" style= "background-color: #C2EEFF">ログイン</h2>
    </div>
  </div>

  <div class="row ml-4 mt-5">
    <h3 class="col-5 text-center" style= "background-color: #C2EEFF">会員の方はこちらからログイン</h3>
  </div>

  <div class="row mt-4">
    <div class="col-6 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group row">
        <%= f.label :メールアドレス, class:"col-sm-3 col-form-label" %>
        <div class="col-sm-9">
        <%= f.email_field :email, placeholder: "sample@example.com", class:"form-control", autofocus: true, autocomplete: "Email" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :パスワード, class:"col-sm-3 col-form-label" %>
        <div class="col-sm-9">
        <%= f.password_field :password, class:"form-control", autocomplete: "Password" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-sm-4">
          <%= f.submit "ログイン", class:"btn btn-primary mb-4" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="row ml-4 mt-3 mb-3">
    <h3 class="col-4 text-center" style= "background-color: #C2EEFF">会員登録がお済みでない方</h3>
  </div>

  <div class="row">
    <div class="col-6 mx-auto">
      <p><%= link_to "こちら", new_member_registration_path %>から新規登録を行ってください。</p>
    </div>
  </div>
  </div>
</div>




