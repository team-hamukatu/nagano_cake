<div class="container">
  <div class="row">
    <div class="col-10">
      <h2>商品一覧</h2>
      <div class="my-3">
        <%= link_to "新規登録", new_admin_item_path, class: "btn btn-info" %>
      </div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜き価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= number_to_currency(item.price_without_tax, unit:"", strip_insignificant_zeros: true) %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == "販売中" %>
                <span class="text-success">販売中</span>
              <% else %>
                <span class="text-black-50">販売停止中</span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="mx-auto" style="width: 300px;">
  <%= paginate items %>
</div>
