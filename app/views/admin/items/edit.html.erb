
<div class="container">
  <div class="text">

  <div class="row mt-5">
    <div class="col-3">
      <h2 class="text-center" style= "background-color: #EEEEEE">商品編集</h2>
    </div>
  </div>

    <div class="raw">
      <%= form_with model:@item, url: admin_item_path, local:true do |f| %>
      <div class="form-group row">
        <label for="item_image">商品画像</label>
        <%= f.attachment_field :item_image %>
      </div>

      <div class="form-group row">
        <%= f.label :name, "商品名", class:"col-sm-4 col-form-label" %>
        <%= f.text_field :name, class:"form-control col-sm-3"%>
      </div>

      <div class="form-group row">
        <%= f.label :item_introduction, '商品説明', class:"col-sm-4 col-form-label" %>
        <%= f.text_area :item_introduction, class:"form-control col-sm-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :genre_id, "ジャンル", class:"col-sm-4 col-form-label" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, class:"form-control col-sm-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :price_without_tax, "税抜き価格", class:"col-sm-4 col-form-label" %>
        <%= f.text_field :price_without_tax, class:"form-control col-sm-3"%>
      </div>

      <div class="form-group row">
        <label><%= f.radio_button :is_active, "販売中"%>販売中</label>
        <label><%= f.radio_button :is_active, "販売停止中" %>販売停止中</label>
      </div>
      <div class="row mt-6">
        <div class="offset-md-4">
          <%= f.submit "変更を保存" , class: "btn btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
    </div>
</div>

