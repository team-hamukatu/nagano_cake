<div class="container">
  <div class="text">

  <div class="row my-5">
      <div class="col-3">
        <h2 class="text-center" style= "background-color: #EEEEEE">商品一覧</h2>
      </div>
      <div class="col-10 my-5">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜き価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price_without_tax %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.is_active %></td>
          </tr>
          <% end %>
        </tbody>
      </table>


  </div>
  </div>
  </div>
</div>
