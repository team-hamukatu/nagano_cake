<div class="container">
  <div class="row offset-1 mt-3">
    <h2 class="px-3 bg-light">注文履歴一覧</h2>
  </div>
  <div class="row">
    <div class="col-10 mx-auto">
      <br>
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
           <% @orders.each do |order| %>
          <tr> 
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order.id) %></td>
            <td><%= order.member.first_name + order.member.last_name %></td>
            <% @sum = 0 %>
            <% order.ordered_items.each do |ordered_item| %>
            <% @sum +=  (ordered_item.quantity).to_i %>
            <% end %>
            <td><%= @sum %></td>
            <td><%= order.order_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="mx-auto" style="width: 300px;">
    <%= paginate @orders %>
  </div>
