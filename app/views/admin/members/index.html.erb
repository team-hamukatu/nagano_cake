<div class="container">
  <div class="text">

  <div class="row my-5">
    <div class="col-3">
      <h2 class="text-center" style= "background-color: #C2EEFF">会員一覧</h2>
    </div>
    <div class="col-10 my-5">
      <table class="table">
        <thead bgcolor=#C2EEFF>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td><%= member.id %></tb>
              <td>
                <%= link_to admin_member_path(member) do %>
                  <%= member.first_name + member.last_name %>
                <% end %>
              </tb>
              <td><%= member.email %></tb>
              <td>
                <% if member.is_active == "Available" %>
                  <span class="text-success">有効</span>
                <% else %>
                <span class="text-black-50">退会</span>
                <% end %>
              </tb>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="mx-auto" style="width: 300px;">
    <%= paginate @members %>
  </div>

  </div>
</div>