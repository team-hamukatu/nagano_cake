<div class="container">
  <div class="row">
    <div class="col">
      <h4>ジャンル一覧・追加</h4>
      <div>
        <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, placeholder: "ジャンル名" %>
          <%= f.submit "新規登録" %>
        <% end %>
      </div>
      <div>
        <table>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></tb>
              <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>