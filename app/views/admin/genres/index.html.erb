<div class="container">
  <div class="row">
    <h4>ジャンル一覧・追加</h4>
    <div class="col-10 my-5">
      <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit "新規登録", class: "btn btn-success btn-sm" %>
      <% end %>
    </div>
    <div class="col-7">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></tb>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>