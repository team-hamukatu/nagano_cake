<div class="container">
  <div class="text">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h3>管理者ログイン</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group row">
        <%= f.label :email, class:"col-sm-2 col-form-label" %>
        <div class="col-sm-10">
        <%= f.email_field :email, placeholder: "sample@example.com", class:"form-control", autofocus: true, autocomplete: "Email" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class:"col-sm-2 col-form-label" %>
        <div class="col-sm-10">
        <%= f.password_field :password, class:"form-control", autocomplete: "Password" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class:"btn btn-primary mb-2" %>
      </div>
    <% end %>

    </div>
  </div>
  </div>
</div>





