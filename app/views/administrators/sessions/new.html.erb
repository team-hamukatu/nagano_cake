<div class="container">
  <div class="text">

  <div class="row mt-5">
    <div class="col-3 ml-3">
      <h2 class="text-center" style= "background-color: #C2EEFF">管理者ログイン</h2>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-6 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group row">
        <%= f.label :メールアドレス, class:"col-sm-3 col-form-label" %>
        <div class="col-sm-9">
        <%= f.email_field :email, placeholder: "sample@example.com", class:"form-control", autofocus: true, autocomplete: "Email" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :パスワード, class:"col-sm-3 col-form-label" %>
        <div class="col-sm-9">
        <%= f.password_field :password, class:"form-control", autocomplete: "Password" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-sm-4">
          <%= f.submit "ログイン", class:"btn btn-primary mb-4" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  </div>
</div>





